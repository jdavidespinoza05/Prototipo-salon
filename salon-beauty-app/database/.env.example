# ==================================================
# Archivo de Configuración de Ejemplo
# Salón de Belleza - Sistema de Fidelidad
# ==================================================
# 
# IMPORTANTE: 
# 1. Copia este archivo como .env
# 2. Completa los valores según tu entorno
# 3. NUNCA commitees el archivo .env al repositorio
#

# ==================================================
# Configuración de Base de Datos
# ==================================================

DB_HOST=localhost
DB_PORT=1521
DB_SID=XE
DB_USER=salon_user
DB_PASSWORD=salon_pass123

# ==================================================
# Configuración de Pool de Conexiones (Node.js)
# ==================================================

DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_INCREMENT=2
DB_POOL_TIMEOUT=60

# ==================================================
# Configuración del Servidor Backend
# ==================================================

# Puerto del servidor
PORT=3000

# Ambiente (development, production, test)
NODE_ENV=development

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:4200

# ==================================================
# Configuración de JWT
# ==================================================

# Secreto para JWT (generar uno único y seguro en producción)
JWT_SECRET=tu_secreto_super_seguro_aqui_cambiar_en_produccion

# Tiempo de expiración del token (ej: 1h, 24h, 7d)
JWT_EXPIRATION=24h

# ==================================================
# Configuración de Email (opcional)
# ==================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion

# Email del remitente
EMAIL_FROM=noreply@salonbelleza.com

# ==================================================
# Configuración de QR Code
# ==================================================

# URL base para los códigos QR
QR_BASE_URL=https://salonbelleza.com/cliente/

# Tamaño del código QR (en píxeles)
QR_SIZE=300

# ==================================================
# Configuración de Archivos
# ==================================================

# Directorio para subida de archivos
UPLOAD_DIR=./uploads

# Tamaño máximo de archivo (en bytes) - 5MB
MAX_FILE_SIZE=5242880

# ==================================================
# Configuración de Logging
# ==================================================

# Nivel de log (error, warn, info, debug)
LOG_LEVEL=info

# Directorio de logs
LOG_DIR=./logs

# ==================================================
# Configuración de Seguridad
# ==================================================

# Número de intentos de login antes de bloquear
MAX_LOGIN_ATTEMPTS=5

# Tiempo de bloqueo en minutos
LOCKOUT_DURATION=30

# Habilitar rate limiting
ENABLE_RATE_LIMIT=true

# Límite de requests por IP (por ventana de tiempo)
RATE_LIMIT_MAX_REQUESTS=100

# Ventana de tiempo en minutos
RATE_LIMIT_WINDOW=15

# ==================================================
# Configuración de Puntos
# ==================================================

# Puntos por cada 1000 colones gastados
POINTS_PER_1000_COLONES=10

# Días hasta que expiren los puntos (0 = nunca expiran)
POINTS_EXPIRATION_DAYS=365

# ==================================================
# Configuración de la Aplicación
# ==================================================

# Nombre de la aplicación
APP_NAME=Salón de Belleza

# Versión de la API
API_VERSION=v1

# URL base de la API
API_BASE_URL=/api/v1

# ==================================================
# Configuración de Cache (Redis - opcional)
# ==================================================

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ==================================================
# Configuración de Backup
# ==================================================

# Habilitar backups automáticos
ENABLE_AUTO_BACKUP=true

# Hora del backup automático (formato 24h: HH:MM)
BACKUP_TIME=02:00

# Directorio de backups
BACKUP_DIR=./backups

# Días para mantener backups
BACKUP_RETENTION_DAYS=30

# ==================================================
# Configuración de Notificaciones
# ==================================================

# Habilitar notificaciones por email
ENABLE_EMAIL_NOTIFICATIONS=true

# Habilitar notificaciones por SMS (requiere servicio externo)
ENABLE_SMS_NOTIFICATIONS=false

# ==================================================
# Configuración de Desarrollo
# ==================================================

# Habilitar modo debug
DEBUG=false

# Mostrar stack trace en errores
SHOW_STACK_TRACE=true

# Habilitar recarga automática
ENABLE_HOT_RELOAD=true

# ==================================================
# Notas de Seguridad
# ==================================================
# 
# IMPORTANTE PARA PRODUCCIÓN:
# 
# 1. Cambiar JWT_SECRET a un valor único y complejo
# 2. Usar contraseñas fuertes para DB_PASSWORD
# 3. Configurar HTTPS (no HTTP)
# 4. Habilitar ENABLE_RATE_LIMIT=true
# 5. Configurar firewalls y security groups
# 6. Mantener NODE_ENV=production
# 7. Desactivar DEBUG=false
# 8. Configurar backups automáticos
# 9. Monitorear logs regularmente
# 10. Actualizar dependencias frecuentemente
#
# ==================================================
